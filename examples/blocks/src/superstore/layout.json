{
    "detail": {
        "main": {
            "type": "split-area",
            "orientation": "horizontal",
            "children": [
                {
                    "type": "tab-area",
                    "widgets": ["report", "raw"],
                    "currentIndex": 0
                },
                {
                    "type": "tab-area",
                    "widgets": ["sales_map"],
                    "currentIndex": 0
                }
            ],
            "sizes": [0.5, 0.5]
        }
    },
    "viewers": {
        "report": {
            "plugin": "datagrid",
            "group_by": ["Region", "State"],
            "split_by": ["Category", "Sub-Category"],
            "columns": ["Sales", "Profit"],
            "table": "superstore",
            "title": "Sales Report"
        },
        "raw": {
            "plugin": "datagrid",
            "columns": [
                "Row ID",
                "Order ID",
                "Ship Mode",
                "Customer ID",
                "Customer Name",
                "Segment",
                "Country",
                "City",
                "State",
                "Postal Code",
                "Region",
                "Product ID",
                "Category",
                "Sub-Category",
                "Product Name",
                "Sales",
                "Quantity",
                "Discount",
                "Profit",
                "Order Date",
                "Ship Date"
            ],
            "table": "superstore",
            "title": "Raw"
        },
        "sales_map": {
            "plugin": "Treemap",
            "group_by": ["State"],
            "columns": ["Sales", "Profit", null],
            "sort": [["Profit", "desc"]],
            "plugin_config": {
                "realValues": ["Sales", "Profit", null],
                "treemaps": {
                    "": {
                        "treemapLevel": 0,
                        "treemapRoute": [""]
                    }
                }
            },
            "title": "By State",
            "table": "superstore"
        }
    }
}
