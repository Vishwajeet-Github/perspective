{
    "compilerOptions": {
        "noImplicitAny": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "target": "es2016",
        "outDir": "./build",
        "lib": ["es2016", "ES2015.Promise", "DOM"],
        "types": ["node"],
        "paths": {
            "@finos/perspective/api/*": ["../perspective/src/js/api/*"]
        }
    },
    "include": [
        "package.json",
        "src/js/**/*",
        "src/ts/**/*",
        "../perspective/src/js/api/*"
    ]
}
